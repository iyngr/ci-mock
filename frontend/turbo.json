{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "dev": {
            "cache": false
        },
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".next/**",
                "dist/**",
                "build/**"
            ]
        },
        "lint": {
            "outputs": []
        },
        "test": {
            "dependsOn": [
                "^test"
            ],
            "outputs": [
                "coverage/**",
                "test-results/**"
            ]
        }
    }
}